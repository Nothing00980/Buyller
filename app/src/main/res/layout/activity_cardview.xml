<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B5B2B2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardUseCompatPadding="true"
        app:cardCornerRadius="7dp"

        >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">


     <ImageView
         android:id="@+id/pimage"

         android:layout_width="370dp"
         android:layout_height="150dp"
         android:layout_margin="20sp"
         android:cropToPadding="false"
         android:scaleType="fitXY"
         tools:srcCompat="@drawable/drafter" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingStart="15sp"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingStart="10sp"
            android:text="" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingStart="15sp"
            android:text=""
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Seller Details"
            android:textColor="#000000"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/snumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:text="" />

    <TextView
        android:id="@+id/sdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_arrow_left_24" />

        <EditText
            android:id="@+id/editTextNumberSigned"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned"
            android:paddingStart="20sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24" />
    </LinearLayout>
 </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
